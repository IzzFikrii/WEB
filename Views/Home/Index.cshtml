@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <!-- Use Unicode character encoding - multi-language compatibity -->
    <meta charset="utf-8">
    <!-- Set the initial view zooming scale for mobile device -->
    <meta name="viewport" content="width = device-width,
initial-scale = 1" />
    <title>ZZ Fashion</title>
    <!-- Reference to customized styling for this website -->
    <link rel="stylesheet" type="text/css" href="~/css/site.css">
</head>
<body>
    <div class="container" id="mainContainer">
        <!-- 1st row -->
        <div style="text-align:center;font-size:40px;padding:8px;">ZZ Fashion</div>

        <div style="background-color:#FEF305; padding: 10px;">
            <h1 style="text-align:center">Welcome</h1>
            <div style="text-align: center;">
                <p>
                    <span>@TempData["SessionTime"]</span>
                </p>
            </div>
            <div class="flex-container" style="justify-content:space-evenly;padding-bottom:30px;">
                <!-- Flexbox for staff login -->
                <div>
                    <form method="post" action="~/Home/StaffLogin">
                        <fieldset class="loginFieldset" style="width:50px;">
                            <legend>Staff Login</legend>
                            <label for="txtStaffLoginID">StaffID:</label>
                            <input type="text" name="txtStaffLoginID"
                                   id="txtStaffLoginID" required /><br />
                            <label for="txtStaffPassword">Password:</label>
                            <input type="password" name="txtStaffPassword"
                                   id="txtStaffPassword" style="width:100px"
                                   required />
                            <input type="submit" id="btnStaffLogin"
                                   class="myButton" value="Login" />
                            <br />
                            <span style="color:red;">@TempData["StaffMessage"]</span>
                        </fieldset>
                    </form>
                </div>
                <!-- Flexbox for member login -->
                <div>
                    <form method="post" action="~/Home/CustomerLogin">
                        <fieldset class="loginFieldset" style="width:50px;">
                            <legend>Member Login</legend>
                            <label for="txtMemberLoginID">MemberID:</label>
                            <input type="text" name="txtMemberLoginID"
                                   id="txtMemberLoginID" required /><br />
                            <label for="txtMemberPassword">Password:</label>
                            <input type="password" name="txtMemberPassword"
                                   id="txtMemberPassword" style="width:100px"
                                   required />
                            <input type="submit" id="btnStaffLogin"
                                   class="myButton" value="Login" />
                            <br />
                            <span style="color:red;">@TempData["CustomerMessage"]</span>
                        </fieldset>
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
